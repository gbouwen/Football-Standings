<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/half_spacing"
    android:divider="@drawable/list_divider_half_vertical"
    android:orientation="horizontal"
    android:showDividers="middle">

    <ImageView
        android:id="@+id/reward_key"
        android:layout_width="@dimen/double_spacing"
        android:layout_height="@dimen/double_spacing"
        android:layout_gravity="center"
        android:src="@drawable/circle" />

    <TextView
        android:id="@+id/reward_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:text="Champions league qualifying" />

</LinearLayout>