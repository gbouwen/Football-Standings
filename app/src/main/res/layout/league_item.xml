<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@drawable/list_divider_single_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/single_spacing"
        android:showDividers="middle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/list_divider_double_vertical"
            android:orientation="horizontal"
            android:showDividers="middle">

            <ImageView
                android:id="@+id/league_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxWidth="@dimen/icon_size"
                android:maxHeight="@dimen/icon_size"
                android:scaleType="fitCenter"
                android:src="@drawable/default_logo" />

            <TextView
                android:id="@+id/league_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                tools:text="PLACEHOLDER LEAGUE NAME" />

        </LinearLayout>

        <Button
            android:id="@+id/league_item_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/league_item_action"
            android:visibility="gone"
            tools:visibility="visible"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>