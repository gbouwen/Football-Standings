<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/quad_spacing">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/club_rank_color_holder"
            android:layout_width="@dimen/quad_spacing"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/club_rank"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center | bottom"
                tools:text="10" />

            <include layout="@layout/line" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <ImageView
            android:id="@+id/club_logo"
            android:layout_width="@dimen/icon_size_small"
            android:layout_height="@dimen/icon_size_small"
            android:gravity="center"
            android:src="@drawable/default_logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/club_rank_color_holder"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/club_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/single_spacing"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/club_logo"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Central Cordoba (Santiago de Estero)" />

        <TextView
            android:id="@+id/club_games_played"
            android:layout_width="@dimen/quad_spacing"
            android:layout_height="wrap_content"
            android:gravity="center"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/club_games_won"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="34" />

        <TextView
            android:id="@+id/club_games_won"
            android:layout_width="@dimen/quad_spacing"
            android:layout_height="wrap_content"
            android:gravity="center"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/club_games_drawn"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="27" />

        <TextView
            android:id="@+id/club_games_drawn"
            android:layout_width="@dimen/quad_spacing"
            android:layout_height="wrap_content"
            android:gravity="center"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/club_games_lost"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="4" />

        <TextView
            android:id="@+id/club_games_lost"
            android:layout_width="@dimen/quad_spacing"
            android:layout_height="wrap_content"
            android:gravity="center"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/club_goals_for"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="3" />

        <TextView
            android:id="@+id/club_goals_for"
            android:layout_width="@dimen/quad_spacing"
            android:layout_height="wrap_content"
            android:gravity="center"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/club_goals_against"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="99" />

        <TextView
            android:id="@+id/club_goals_against"
            android:layout_width="@dimen/quad_spacing"
            android:layout_height="wrap_content"
            android:gravity="center"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/club_goal_difference"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="33" />

        <TextView
            android:id="@+id/club_goal_difference"
            android:layout_width="@dimen/quad_spacing"
            android:layout_height="wrap_content"
            android:gravity="center"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/club_points"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="66" />

        <TextView
            android:id="@+id/club_points"
            android:layout_width="@dimen/quad_spacing"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="85" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>